import java.util.Scanner;
class ASG2{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        System.out.println("Do you have any medical issue press 'y' or 'n'");
        char c=sc.next().charAt(0);
        if(c=='y')
        System.out.println("Not allowed to sit in exams.");
        else System.out.println("Allowed to sit in exams.");
    }
}
